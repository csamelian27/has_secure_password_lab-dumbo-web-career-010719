<h1>Create a New User:</h1>

<%= form_for @user, url: users_path, action: 'create' do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :password %>
  <%= f.password_field :password %><br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>

  <%= f.submit "create" %>
<% end %>
